---
interface Props {
  products: any[];
}

const { products } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
  {products.map((product) => (
    <a href={`/catalog/${product.slug}`} class="group bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow border overflow-hidden">
      <div class="aspect-square overflow-hidden bg-gray-200 relative">
         <img 
           src={product.data.images[0]} 
           alt={product.data.title} 
           class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
         />
         {product.data.featured && (
           <span class="absolute top-2 right-2 bg-secondary text-white text-xs px-2 py-1 uppercase font-bold tracking-wider">Featured</span>
         )}
      </div>
      <div class="p-4">
        <p class="text-xs text-gray-500 mb-1 uppercase tracking-wide">{product.data.category}</p>
        <h2 class="text-lg font-bold text-primary group-hover:text-secondary transition-colors mb-2">{product.data.title}</h2>
        <p class="text-sm text-gray-600 line-clamp-2">{product.data.description}</p>
      </div>
    </a>
  ))}
</div>

{products.length === 0 && (
  <div class="text-center py-20">
    <p class="text-gray-500 text-lg">No products found in this category.</p>
  </div>
)}
